<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3" style="width:390px">

    <%= form.text_field :title ,  class:"form-control", placeholder:"Title (Max 20 Chars )", maxlength: 20 %>
  </div>

  <div class="mb-3" style="width:390px;">

    <%= form.text_area :body ,   class:"form-control", placeholder:"Your Post (Max Chars 140 )",  maxlength: 140, rows:5 %>
  </div>

  <div class="mb-3" style="width:390px">

    <%= form.text_field :author ,  class:"form-control",  value: current_user.username ,type: :hidden %>
  </div>

  <div class="mb-3" style="width:390px">

    <%= form.text_field :avatar ,  class:"form-control", placeholder:"avatar link", value: current_user.avatar, type: :hidden %>
  </div>
      <div class="mb-3">

    <%= form.number_field :user_id , id: :friend_user_id ,  class:"form-control" , value: current_user.id, type: :hidden %>
     </div>



  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
