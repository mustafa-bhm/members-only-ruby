  <% end %>

  <div class="mb-3" style="width:390px">

    <%= form.text_field :title ,  class:"form-control", placeholder:"title" %>
  </div>

  <div class="mb-3" style="width:390px">

    <%= form.text_area :body ,  class:"form-control", placeholder:"Your Post" %>
  </div>

  <div class="mb-3" style="width:390px">

    <%= form.text_field :author ,  class:"form-control",  value: current_user.username ,type: :hidden %>
  </div>

  <div class="mb-3" style="width:390px">

    <%= form.text_field :avatar ,  class:"form-control", placeholder:"avatar link" %>
  </div>
      <div class="mb-3">

    <%= form.number_field :user_id , id: :friend_user_id ,  class:"form-control" , value: current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
