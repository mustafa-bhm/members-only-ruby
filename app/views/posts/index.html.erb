<p style="color: green"><%= notice %></p>

<h1>Posts</h1>



<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>body</th>
      <th>Avatar</th>
      <th>Author</th>
      <th>Create at</th>

    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
       <td><%= link_to post.title , post %></td>
       <td> <%=post.body %></td>
        <td><%= post.avatar %></td>
        <td><%= post.author %></td>
        <td><%= post.created_at %></td>
       </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New post", new_post_path %>
